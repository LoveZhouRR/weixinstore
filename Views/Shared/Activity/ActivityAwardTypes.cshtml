@using DBC.Ors.UI.Web.Mvc
@using DBC.WeChat.Models.Conversation
@model ICollection<DBC.WeChat.Models.Conversation.AwardType>

<div class="sc_ctab sc_top">
    @if (Model.Count == 0)
    {
        Model.Add(new AwardType());
    }
    <table id="AwardList">
        <thead>
            <tr>
                <th class="sc_ctname">奖项名称</th>
                <th class="sc_ctname">奖品名称</th>
                <th class="sc_ctnums">奖项数量</th>
                <th class="sc_ctodds">中奖概率(%)</th>
                <th class="sc_ctlabe">中奖提示</th>
                <th class="sc_ctopea">操作</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr id="li@(i)">
                    <td class="sc_ctname">
                        <input type="text" name="TypeName@(i)" value="@Model.ToArray()[i].TypeName" /></td>
                    <td class="sc_ctname">
                        <input type="text" name="Name@(i)" value="@Model.ToArray()[i].Name" />
                    </td>
                    <td class="sc_ctnums">
                        <input type="text" name="Count@(i)" value="@Model.ToArray()[i].Count" />
                    </td>
                    <td class="sc_ctodds">
                        <input type="text" name="Probality@(i)" value="@Model.ToArray()[i].Probability" />
                    </td>
                    <td class="sc_ctlabe">
                        <input type="text" name="Reply@(i)" value="@Model.ToArray()[i].Reply" />
                    </td>
                    <td class="sc_ctopea">
                        <a id="Delete@(i)" index="@i" action="DoAjax">删除</a>
                        <input type="hidden" name="ID@(i)" value="@Model.ToArray()[i].ID" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p class="sc_addacty sc_top"><a id="AddAwardType">+ 添加奖项</a></p>
</div>
<div class="hide">
    <input id="AwardTypeCount" name="AwardTypeCount" type="text" value=@(Model.Count) />
</div>
